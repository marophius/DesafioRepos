@model Equipe
@{
    ViewData["Title"] = "AtualizarEquipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Atualizar Equipe</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="NomeEquipe">Nome</label>
        <input asp-for="NomeEquipe" placeholder="Digite um novo para a equipe" class="form-control">
        <span asp-validation-for="NomeEquipe" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NomeGestor">Gestor</label>
        <input asp-for="NomeGestor" placeholder="Novo gestor" class="form-control">
        <span asp-validation-for="NomeGestor" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</form>
